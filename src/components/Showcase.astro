---
import '../styles/global.css'

export interface Props {
  title?: string;
  content?: string;
  image?: string;
}

const {title = 'Foot Me' , content = 'Saving the future one child at a time.', image='https://images.unsplash.com/photo-1463100099107-aa0980c362e6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80'} = Astro.props
---

<section class="showcase-section showcase">
  <img src={image} class="background-image"/>
  <div class="showcase-text">
    <h1 class="sc-title">
      {title}
    </h1>
    <p class="sc-text">
      {content}
    </p>
  </div>
</section>

<style>
  .showcase-section {
    background-color: #645CBB;
    margin: 100px 0 50px 0;
    padding: 100px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    box-shadow: 0 2px 1px rgba(0, 0, 0, 0.25);
  }
  img.background-image {
    width: 100%;
    height: 100vh;
    object-fit: cover;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }
  .showcase-text {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    background-color: rgba(100, 92, 187, 0.65);
    color: #fff;
    border-radius: 8px;
    padding: 10px 5px;
  }

  .sc-title {
    font-size: 50px;
  }
  .sc-text {
    font-size: 20px;
    line-height: 2rem;
  }

  @media screen and (max-width: 636px) {
    img.background-image {
      position: relative;
    height: 60vh; 
    width: 100%;
    object-fit: cover;
  }

  .showcase-text {
    position: absolute;
    bottom: 25%;
    width: 100%;
    object-fit: cover;
  }
  .sc-title {
    font-size: 35px;
  }
  .sc-text {
    display: none;
    font-size: 0.9rem;
    line-height: 2rem;
  }
}
</style>